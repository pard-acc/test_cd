var databaseControl = require( '../dataBase/control_db' )
exports.showData = function( res, callback ) {
  try {
      var searchItem =  { "Func" : "Inform" };
      databaseControl.QueryData( 'HS000bb61e76a0', searchItem, function( error , items )  {
        if( error ) {

        } else {
          console.log( items[0].Func );
          console.log( items[0].Time ); 
          console.log( JSON.stringify(items[0].Data) );
          console.log( items[0].Seq );
          res.render( 'index', {  
            title: '首頁',  
            users: [ items[0].Func, items[0].Time,  JSON.stringify(items[0].Data), items[0].Seq ]  
          })
        }
    })
    callback && callback(null); 
  } catch (err) {
    callback(err);
  }
};

